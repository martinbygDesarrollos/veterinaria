{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header">Socios</h5>
				<div class="card-body">
					<table id="tableStandar" class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Número</th>
								<th class="text-center" scope="col">Nombre</th>
								<th class="text-center" scope="col">Teléfono</th>
								<th class="text-center" scope="col">Pagar</th>
								<th class="text-center" scope="col">Ver</th>
							</tr>
						</thead>
						<tbody>
							{% for socio in socios%}
							<tr>
								<td class="text-center">{{ socio.idSocio }}</td>
								<td class="text-center">{{ socio.nombre }}</td>
								<td class="text-center">{{ socio.telefono }}</td>
								<td class="text-center">{{ socio.cuota }}</td>
								<td class="text-center">
									<button class="btn btn-info btn-sm">
										<a style="color: white;" href="{{path_for('Inicio')}}verSocio/{{socio.idSocio}}"><i class="fas fa-eye"></i></a>
									</button>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
{% endblock %}
{% endblock %}