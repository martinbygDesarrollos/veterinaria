{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="card border-top-0 rounded-bottom border shadow w-75">
		<div class="card-header d-flex justify-content-between bg-mycolor">
			<h5 class="card-title">Guardería</h5>
			<button class="btn btn-dark" data-toggle="tooltip" data-placement="top" title="Agendar nueva guardería" onclick="newRowToCalendar()"><i class="fas fa-calendar-plus"></i></button>
		</div>
		<div class="card-body">
			<div class="tableCustomScroll">
				<table class="table">
					<tbody id="tbodyGuarderia"></tbody>
				</table>
			</div>
		</div>
	</div>
</div>
{% include("modalSearchClientOrPet.twig") %}
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/showReplyMessage.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/sendPost.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/utils.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/guarderia.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/agenda.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/mascotas.js?{{version}}"></script>
<script type="text/javascript">
	pagination = 0;
	cargarTablaGuarderia();
	$('.tableCustomScroll').on('scroll', function() {

		if($(this).scrollTop() + $(this).innerHeight() >= ($(this)[0].scrollHeight - 10)) {
			cargarTablaGuarderia();
		}
	});
</script>
{% endblock %}
{% endblock %}