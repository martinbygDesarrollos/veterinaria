{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
{% if administrador %}
<div class="d-flex flex-row-reverse">
	{% if hayVencimientos.result == 2 %}
	<a  id="hayVencimientosHoy" class="btn btn-warning" href="{{path_for('VacunasVencidas')}}"></a>
	{% endif %}
	{% if hayVencimientoSocio == 1 %}
	<div class="col-md-6">
		<div class="input-group mb-3">
			<a id="hayCuotasVencidas" class="btn btn-warning" href="{{path_for('Inicio')}}cuotasVencidas"></a>
		</div>
	</div>
	{% endif %}
</div>
{% endif %}
<div class="d-flex justify-content-center">
	<img style="width: 400px; height: 400px; border-radius: 50%;margin-top: 1%" src="{{path_for('Inicio')}}img/inicio.png">
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/showReplyMessage.js"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/sendPost.js"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/utils.js"></script>
<script>
	$('#hayVencimientosHoy').html("Vacunas vencidas al " + getDateForShow())
</script>
{% endblock %}
{% endblock %}