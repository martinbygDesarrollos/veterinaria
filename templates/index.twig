<div class="d-flex justify-content-between align-items-center">
	<div></div>

	<a id="hayVencimietnosHoy" class="btn btn-warning" href="{{path_for('Inicio')}}vencimientos">Vencimientos del d√≠a de hoy</a>
</div>

{%block script%}
<script>
	let date = new Date()

	let day = date.getDate()
	let month = date.getMonth() + 1
	let year = date.getFullYear()

	if(month < 10){
		month = "0" + month ;
	}

	if(day < 10){
		day = "0" + day;
	}
	if(document.getElementById('hayVencimietnosHoy'))
		document.getElementById('hayVencimietnosHoy').innerHTML = "Vencimietos del " + day + "/" + month + "/" + year;
</script>
