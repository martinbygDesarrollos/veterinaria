{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
{% if administrador %}
{% if hayVencimientos.result == 2 %}
<div class="d-flex flex-row-reverse mt-2">
	<a  id="hayVencimientosHoy" class="btn btn-warning" href="{{path_for('VacunasVencidas')}}"></a>
</div>
{% endif %}
{% if responseVencimientosSocio.result == 2 %}
