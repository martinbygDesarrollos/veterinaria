{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-lg-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header">Historia clinica de {{ info.mascota.nombre }}</h5>
				<div class="card-body">
					<table id="tableStandar" class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Fecha</th>
								<th class="text-center" scope="col">Motivo consulta</th>
								<th class="text-center" scope="col">Ver</th>
							</tr>
						</thead>
						<tbody>
							{% for historia in historias %}
							<tr>
								<td class="text-center">{{ historia.fecha }}</td>
								<td class="text-center">{{ historia.motivoConsulta }}</td>
								<td class="text-center">
									<button class="btn btn-info btn-sm">
										<a style="color: white;" href="{{path_for('Inicio')}}verSocio/{{socio.idSocio}}">Ver detalle</a>
									</button>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
{% endblock %}
{% endblock %}