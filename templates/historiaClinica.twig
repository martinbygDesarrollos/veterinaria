{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="col-4">
		<div class="card">
			<h5 class="card-header" style="background: #85B58A">Historia cl√≠nica de {{ mascota.nombre }}</h5>
			<div class="card-body">
				<table id="tableStandar" class="table table-striped table-bordered">
					<thead class="thead-dark">
						<tr>
							<th class="text-center" scope="col">Fecha</th>
							<th class="text-center" scope="col">Motivo consulta</th>
							<th class="text-center" scope="col">Ver</th>
						</tr>
					</thead>
					<tbody>
						{% for historia in historias %}
						<tr>
							<td class="text-center">{{ historia.fecha }}</td>
							<td class="text-center">{{ historia.motivoConsulta }}</td>

							<td class="text-center">
								<button id="{{ historia.idHistorialClinico }}" class="btn btn-info btn-sm" onclick="verHistoriaClinica(this)"><i class="fas fa-eye"></i></button>
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="modalHistoriaClinica" tabindex="-1" role="dialog"  aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header alert-info" >
				<h5 class="modal-title" id="titleConsulta"></h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<h6 class="card-subtitle mb-2 text-muted">Fecha consulta</h6>
				<p id="fechaConsulta"></p>
				<h6 class="card-subtitle mb-2 text-muted">Motivo consulta</h6>
				<p id="motivoConsulta"></p>
				<h6 class="card-subtitle mb-2 text-muted">Diagnostico</h6>
				<p id="diagnosticoConsulta"></p>
				<h6 class="card-subtitle mb-2 text-muted">Observaciones</h6>
				<p id="observacionesConsulta"></p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger" data-dismiss="modal">Cerrar</button>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/verHistoriaClinica.js"></script>
{% endblock %}
{% endblock %}