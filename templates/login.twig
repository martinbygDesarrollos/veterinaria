{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <img src="{{path_for('Inicio')}}img/inicio.jpeg">
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <div class="form-group w-50">
                            <label for="inpUsuario">Usuario</label>
                            <input type="email" class="form-control text-center shadow-sm" id="inpUsuario" onkeypress="return keyPressSingIn(event)">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="form-group w-50">
                            <label for="inpPass">Contraseña</label>
                            <input type="password" class="form-control text-center shadow-sm" id="inpPass" onkeypress="return keyPressSingIn(event)">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="col-sm" style="text-align:center;">
                            <button id="btnConfirm" onclick="iniciarSesion()" class="btn btn-success shadow-sm">iniciar sesión</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/showReplyMessage.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/sendPost.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/utils/utils.js?{{version}}"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/iniciarSesion.js?{{version}}"></script>
<script type="text/javascript">
    $('#inpUsuario').focus();
</script>
{% endblock %}
{% endblock %}