{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header" style="background: #85B58A">Nuevo socio</h5>
				<div class="card-body">
					<h6 class="card-subtitle mb-2 text-muted">Información obligatoria</h6>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
										<input id="inpNombreSocio" type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Teléfono</span>
										<input id="inpTelefonoSocio" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==9) return false;" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Cédula</span>
										<input id="inpCedulaSocio" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==8) return false;" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Dirección</span>
										<input id="inpDireccionSocio" type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-5">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<label class="input-group-text" for="inputGroupSelect01">Tipo de Socio</label>
										</div>
										<select class="custom-select" id="inpTipoSocio">
											<option value="1" selected>Socio</option>
											<option value="0">No socio</option>
											<option value="2">ONG</option>
										</select>
									</div>
								</div>
							</div>
						</li>
						<h6 style="margin-top: 10px;" class="card-subtitle mb-2 text-muted">Información opcional</h6>
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Email</span>
										<input id="inpEmailSocio" type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Rut</span>
										<input id="inpRutSocio" type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Telefax</span>
										<input id="inpTelefaxSocio" type="text" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
							</div>
						</li>
						<h6 style="margin-top: 10px;" class="card-subtitle mb-2 text-muted">Información de pago</h6>
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Fecha Pago</span>
										<input id="inpFechaPagoSocio" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==2) return false;" class="form-control text-center" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<div class="input-group-prepend">
											<label class="input-group-text" for="inputGroupSelect01">Lugar de pago</label>
										</div>
										<select class="custom-select" id="inpLugarPagoSocio">
											<option value="2" selected>Seleccione</option>
											<option value="0">Veterinaria</option>
											<option value="1">Cobrador</option>
										</select>
									</div>
								</div>
							</div>
						</li>
						<li class="list-group-item">
							<div class="d-flex justify-content-center">
								<button onclick="insertarNuevoSocio()" class="btn btn-success">Confirmar</button>
							</div>
						</li>
					</ul>
				</div>
			</div>
			<div id="containerNuevaMascota" class="card" style="margin-top: 10px; display: none;">
				<h5 class="card-header">Asociar nueva mascota</h5>
				<div class="card-body">
					<p id="pInformacionMascota" class="card-text"></p>
					<h6 class="card-subtitle mb-2 text-muted">Información obligatoria</h6>
					<input style="display: none" type="text" id="idSocioAgregado">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Nombre</span>
										<input id="inpNombreMascota" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Raza</span>
										<input id="inpRazaMascota" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Especie</span>
										<input id="inpEspecieMascota" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Color</span>
										<input id="inpColorMascota" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Nacimiento</span>
										<input id="inpNacimientoMascota" type="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
									<div class="input-group mb-3">
										<select id="slcSexoMascota" class="form-select btn" >
											<option value="2" selected>Sexo</option>
											<option value="0">Hembra</option>
											<option value="1">Macho</option>
										</select>
									</div>
								</div>
							</div>
						</li>
						<h6 style="margin-top: 10px;" class="card-subtitle mb-2 text-muted">Información adicional</h6>
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Pelo</span>
										<input id="inpPeloMascota" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="input-group mb-3">
										<span class="input-group-text" id="inputGroup-sizing-default">Chip</span>
										<input id="inpChipMascota" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==15) return false;" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
									</div>
								</div>
								<div class="col-sm">
									<div class="col-sm">
										<select id="slcPedigreeMascota" class="form-select btn" >
											<option selected value="0">No</option>
											<option value="1">Si</option>
										</select>
									</div>
								</div>
							</div>
						</li>
						<h6 style="margin-top: 10px;" class="card-subtitle mb-2 text-muted">Observaciones</h6>
						<li class="list-group-item">
							<div class="row">
								<div class="col-sm">
									<div class="input-group mb-3">
										<textarea id="inpObservacionesMascota" class="form-control rounded-0" maxlength="200" id="exampleFormControlTextarea2" rows="3"></textarea>
									</div>
								</div>
							</div>
						</li>
						<li class="list-group-item">
							<div class="d-flex justify-content-center">
								<button id="btnCrearMascota" onclick="insertarNuevaMascota()" class="btn btn-success">Crear Mascota y asociar a fulanito</button>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/newSocio.js"></script>
{% endblock %}
{% endblock %}