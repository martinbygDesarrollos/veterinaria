{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="container h-100">
	<div class="row justify-content-center">
		<div class="col-sm align-self-center text-center">
			<div class="col">
				{% if busqueda.sociosSize == 0 %}
				<div class="alert alert-danger" role="alert">
					<h4 class="alert-heading">No se obtuvieron resultados!</h4>
					<p>No se encontraron registros que contengan la sugerencia ingresada en el campo nombre.</p>
					<hr>
					<p class="mb-0">Su sugerencia ingresada fue:  {{ buscado }} </p>
					<a style="margin-top: 3%" class="btn btn-info" href="{{ path_for('Inicio') }}">volver</a>
				</div>
				{% else %}
				<div id="containerNuevoSocio" class="card">
					<div class="card-header d-flex justify-content-between align-items-center" style="background: #85B58A">
						<h5>Resultado de la busqueda:  {{ buscado }} en {{busqueda.sociosSize}} </h5>
					</div>
					<div class="card-body">
						<table id="tableStandar" class="table table-striped table-bordered">
							<thead class="thead-dark">
								<tr>
									<th class="text-center" scope="col">Nombre</th>
									<th class="text-center" scope="col">Cédula</th>
									<th class="text-center"abbr="" scope="col">Teléfono</th>
									<th class="text-center" scope="col">Dirección</th>
									<th class="text-center" scope="col">Estado</th>
									<th class="text-center" scope="col">Tipo</th>
									<th class="text-center" scope="col">Ver</th>
								</tr>
							</thead>
							<tbody>
								{% for socio in busqueda.socios %}
								<tr>
									<td class="text-center">{{ socio.nombre }}</td>
									<td class="text-center">{{ socio.cedula }}</td>
									<td class="text-center">{{ socio.telefono }}</td>
									<td class="text-center">{{ socio.direccion }}</td>
									{% if socio.estado == 0 %}
									<td class="text-center">Inactivo</td>
									{% elseif socio.estado == 1 %}
									<td class="text-center">Activo</td>
									{% endif %}
									{% if socio.tipo == 1 %}
									<td class="text-center">Socio</td>
									{% elseif socio.tipo == 2 %}
									<td class="text-center">ONG</td>
									{% elseif socio.tipo == 0 %}
									<td class="text-center">No socio</td>
									{% endif %}
									<td class="text-center">
										<a class="btn btn-info btn-sm" href="{{path_for('Inicio')}}verSocio/{{ socio.idSocio }}"><i class="fas fa-eye"></i></a>
									</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
				<a style="margin-top: 3%" class="btn btn-info" href="{{ path_for('Inicio') }}">volver</a>
				{% endif %}
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="modalActivarDesactivarSocio" tabindex="-1" role="dialog"  aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header alert-info" >
				{% if socio.estado == 0 %}
				<h5 class="modal-title" >Activar socio</h5>
				{% else %}
				<h5 class="modal-title" >Desactivar socio</h5>
				{% endif %}
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p class="text-center">¿Seguro que desea desactivar este socio?</p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger" data-dismiss="modal">Cerrar</button>
				<button class="btn btn-success" id="{{ socio.idSocio }}" name="{{ socio.estado }}" onclick="activarDesactivarSocio(this)">Aplicar</button>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/verMascota.js"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/verSocio.js"></script>
{% endblock %}
{% endblock %}