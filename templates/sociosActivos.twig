{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center" >
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header" style="background: #85B58A">Socios activos</h5>
				<div class="card-body">
					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default">Buscar</span>
						<input id="inpEditNombre" type="text" class="form-control text-center" aria-label="Sizing example input" value="{{ mascota.nombre }}">
					</div>
					<table class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Número</th>
								<th class="text-center" scope="col">Nombre</th>
								<th class="text-center" scope="col">Teléfono</th>
								<th class="text-center" scope="col">Pagar</th>
								<th class="text-center" scope="col">Ver</th>
							</tr>
						</thead>
						<tbody id="tbodySociosActivos"></tbody>
					</table>
					<div class="d-flex justify-content-between">
						<button class="btn btn-sm btn-info" onclick="paginaAnterior()">Atras</button>
						<button class="btn btn-sm btn-info" onclick="paginaPosterior()">Adelante</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/sociosActivos.js"></script>
<script type="text/javascript">
	cargarTabla()
</script>
{% endblock %}
{% endblock %}