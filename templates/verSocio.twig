{% extends "base.twig" %}
{% block head %}

{% endblock %}
{% block content %}

<div class="row justify-content-center">
	<div class="col-7">
		<div id="containerNuevoSocio" class="card">
			<h5 class="card-header">Socio {{ socio.nombre}}</h5>
			<div class="card-body">
				<ul class="list-group list-group-flush">
					<li class="list-group-item">
						<h6 class="card-subtitle mb-2 text-muted">Información del socio</h6>
						<div class="row">
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Cédula</span>
									<p style="text-align: center;" class="form-control">{{ socio.cedula }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Teléfono</span>
									<p style="text-align: center;" class="form-control">{{ socio.telefono }}</p>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Dirección</span>
									<p style="text-align: center;" class="form-control">{{ socio.direccion }}</p>
								</div>
							</div>
						</div>
					</li>
					<li class="list-group-item">
						<h6 class="card-subtitle mb-2 text-muted">Información de pago</h6>
						<div class="row">
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Cuota</span>
									<p style="text-align: center;" class="form-control">$ {{ socio.cuota }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Fecha Pago</span>
									<p style="text-align: center;" class="form-control">{{ socio.fechaPago }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Lugar de pago</span>
									{% if socio.lugarPago == 1%}
									<p style="text-align: center;" class="form-control">Veterinaria</p>
									{% else %}
									<p style="text-align: center;" class="form-control">Cobrador</p>
									{% endif %}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Fecha ultimo pago</span>
									<p style="text-align: center;" class="form-control">{{ socio.fechaUltimoPago }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Fecha ultima cuota</span>
									<p style="text-align: center;" class="form-control">{{ socio.fechaUltimaCuota }}</p>
								</div>
							</div>
						</div>
					</li>
					<li class="list-group-item">
						<h6 class="card-subtitle mb-2 text-muted">Información adicional</h6>
						<div class="row">
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Fecha ingreso</span>
									<p style="text-align: center;" class="form-control">{{ socio.fechaIngreso }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Rut</span>
									<p style="text-align: center;" class="form-control">{{ socio.rut }}</p>
								</div>
							</div>
							<div class="col-sm">
								<div class="input-group mb-3">
									<span class="input-group-text" id="inputGroup-sizing-default">Telefax</span>
									<p style="text-align: center;" class="form-control">{{ socio.telefax }}</p>
								</div>
							</div>
						</div>
					</li>
					<li class="list-group-item">
						<h6 class="card-subtitle mb-2 text-muted">Mascotas</h6>
						<table class="table table-striped table-bordered">
							<thead class="thead-dark">
								<tr>
									<th scope="col">Nombre</th>
									<th scope="col">Raza</th>
									<th scope="col">Especie</th>
									<th scope="col">Sexo</th>
									<th scope="col">Nacimiento</th>
									<th scope="col">Ver</th>
									<th scope="col">Vacunar</th>
								</tr>
							</thead>
							<tbody>
								{% for mascota in socio.mascotas%}
								<tr>
									<td>{{ mascota.nombre }}</td>
									<td>{{ mascota.raza }}</td>
									<td>{{ mascota.especie }}</td>
									{% if mascota.sexo == 0 %}
									<td>Hembra</td>
									{% else %}
									<td>Macho</td>
									{% endif %}
									<td>{{ mascota.fechaNacimiento }}</td>
									<td>
										<center>
											<a href="{{path_for('Inicio')}}verMascota/{{ mascota.idMascota }}">Ver</a>
										</center>
									</td>
									<td>
										<center>
											<a href="{{path_for('Inicio')}}">Vacunar</a>
										</center>
									</td>
								</tr>
								{% endfor %}
							</tbody>
						</table>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>


{%block script%}
{% endblock %}
{% endblock %}