{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="container h-100">
	<div class="row justify-content-center">
		<div class="col-sm align-self-center text-center">
			<div class="col">
				<div id="containerNuevoSocio" class="card">
					<div class="card-header d-flex justify-content-between align-items-center" style="background: #85B58A">
						<h5>Socio {{ socio.nombre}}</h5>
						<a style="color: white;" class="btn btn-info btn-sm" href="{{path_for('Inicio')}}editSocio/{{ socio.idSocio }}"><i class="fas fa-edit"> editar</i></a>
					</div>
					<div class="card-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<h6 class="card-subtitle mb-2 text-muted">Información del socio</h6>
								<div class="row">
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Cédula</span>
											<p class="form-control text-center">{{ socio.cedula }}</p>
										</div>
									</div>
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Teléfono</span>
											<p class="form-control text-center">{{ socio.telefono }}</p>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Dirección</span>
											<p class="form-control text-center">{{ socio.direccion }}</p>
										</div>
									</div>
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Tipo de socio</span>
											{% if socio.tipo == 1 %}
											<p  class="form-control text-center">Socio</p>
											{% elseif socio.tipo == 0 %}
											<p class="form-control text-center">No socio</p>
											{% else %}
											<p class="form-control text-center">ONG</p>
											{% endif %}
										</div>
									</div>
								</div>
							</li>
							<li class="list-group-item">
								<h6 class="card-subtitle mb-2 text-muted">Información de pago</h6>
								<div class="row">
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Cuota</span>
											<p class="form-control text-center">$ {{ socio.cuota }}</p>
										</div>
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Ultimo pago</span>
											<p class="form-control text-center">{{ socio.fechaUltimoPago }}</p>
										</div>
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Lugar de pago</span>
											{% if socio.lugarPago == 0 %}
											<p class="form-control text-center">Veterinaria</p>
											{% elseif socio.lugurPago == 1 %}
											<p class="form-control text-center">Cobrador</p>
											{% else %}
											<p class="form-control text-center">No especificado</p>
											{% endif %}
										</div>
									</div>
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Fecha Pago</span>
											<p class="form-control text-center">{{ socio.fechaPago }}</p>
										</div>
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Ultimo mes pago</span>
											<p  class="form-control text-center">{{ socio.fechaUltimaCuota }}</p>
										</div>
									</div>
								</div>
							</li>
							<li class="list-group-item">
								<h6 class="card-subtitle mb-2 text-muted">Información adicional</h6>
								<div class="row">
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Ingreso</span>
											<p class="form-control text-center">{{ socio.fechaIngreso }}</p>
										</div>
									</div>
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Rut</span>
											<p class="form-control text-center">{{ socio.rut }}</p>
										</div>
									</div>
									<div class="col-sm">
										<div class="input-group mb-3">
											<span class="input-group-text" id="inputGroup-sizing-default">Telefax</span>
											<p class="form-control text-center">{{ socio.telefax }}</p>
										</div>
									</div>
								</div>
							</li>
							<li class="list-group-item">
								<h6 class="card-subtitle mb-2 text-muted">Mascotas</h6>
								<table class="table table-striped table-bordered">
									<thead class="thead-dark">
										<tr>
											<th class="text-center" scope="col">Nombre</th>
											<th class="text-center"abbr="" scope="col">Raza</th>
											<th class="text-center" scope="col">Especie</th>
											<th class="text-center" scope="col">Sexo</th>
											<th class="text-center" scope="col">Nacimiento</th>
											<th class="text-center" scope="col">Estado</th>
										</tr>
									</thead>
									<tbody>
										{% for mascota in socio.mascotas%}
										<tr>
											<td class="text-center">
												<a class="btn btn-info btn-sm" href="{{path_for('Inicio')}}verMascota/{{ mascota.idMascota }}">{{ mascota.nombre }}</a>
											</td>
											<td class="text-center">{{ mascota.raza }}</td>
											<td class="text-center">{{ mascota.especie }}</td>
											{% if mascota.sexo == 0 %}
											<td class="text-center">Hembra</td>
											{% else %}
											<td class="text-center">Macho</td>
											{% endif %}
											<td class="text-center">{{ mascota.fechaNacimiento }}</td>
											<td class="text-center">
												{% if socio.estado != 0 %}
												{% if mascota.estado == 0 %}
												<button class="btn btn-success btn-sm" name="{{ mascota.idMascota }}" onclick="activarDesactivarMascota(this)">Activar</button>
												{% else %}
												Activa
												{% endif %}
												{% else %}
												Inactiva
												{% endif %}
											</td>
										</tr>
										{% endfor %}
									</tbody>
								</table>
							</li>
						</ul>
						<div class="d-flex justify-content-between" style="margin-top: 1%">
							{% if socio.estado == 0 %}
							<button class="btn btn-success"  data-toggle="modal" data-target="#modalActivarDesactivarSocio">Activar socio</button>
							{% else %}
							<button class="btn btn-danger" data-toggle="modal" data-target="#modalActivarDesactivarSocio">Desactivar socio</button>
							{% endif %}
							<button class="btn btn-info">Exportar actividad</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="modalActivarDesactivarSocio" tabindex="-1" role="dialog"  aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header alert-info" >
				{% if socio.estado == 0 %}
				<h5 class="modal-title" >Activar socio</h5>
				{% else %}
				<h5 class="modal-title" >Desactivar socio</h5>
				{% endif %}
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p class="text-center">¿Seguro que desea desactivar este socio?</p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger" data-dismiss="modal">Cerrar</button>
				<button class="btn btn-success" id="{{ socio.idSocio }}" name="{{ socio.estado }}" onclick="activarDesactivarSocio(this)">Aplicar</button>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/verMascota.js"></script>
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/verSocio.js"></script>
{% endblock %}
{% endblock %}