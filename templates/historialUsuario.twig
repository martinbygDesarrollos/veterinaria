{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header" style="background: #85B58A">Historial de usuario</h5>
				<div class="card-body">
					<table id="tableStandar" class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Fecha</th>
								<th class="text-center" scope="col">Usuario</th>
								<th class="text-center" scope="col">Operacion</th>
								<th class="text-center" scope="col">Detalle</th>
							</tr>
						</thead>
						<tbody>
							{% for operacion in operaciones %}
							<tr>
								<td class="text-center">{{ operacion.fecha }}</td>
								<td class="text-center">{{ operacion.nombre }}</td>
								<td class="text-center">{{ operacion.funcion }}</td>
								<td class="text-justify">{{ operacion.observacion }}</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
{% endblock %}
{% endblock %}