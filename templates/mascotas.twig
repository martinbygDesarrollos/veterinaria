{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header" style="background: #85B58A">Mascotas</h5>
				<input type="text" id="estadoMascotaVista" value="1" style="display: none">
				<div class="card-body">
					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-search"></i></span>
						<input type="text" class="form-control" onchange="buscarMascota(this)" onkeyup="this.onchange()" aria-label="Sizing example input" placeholder="Buscar nombre...">
					</div>
					<table class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Nombre</th>
								<th class="text-center" scope="col">Especie</th>
								<th class="text-center" scope="col">Raza</th>
								<th class="text-center" scope="col">Sexo</th>
								<th class="text-center" scope="col">Fecha nacimiento</th>
								<th class="text-center" scope="col">Ver</th>
							</tr>
						</thead>
						<tbody id="tbodyMascotas1">
						</tbody>
					</table>
					<div id="noHayResultadosMensaje" style="display: none" class="alert alert-info text-center" role="alert">
						<h3>No hay resultado</h3>
						No se encontraron resultados para esta busqueda.
					</div>
					<div class="d-flex justify-content-between">
						<button id="irAtrasPagina" class="btn btn-sm btn-info" onclick="paginaAnterior()">Atras</button>
						<button id="irAdelantePagina" class="btn btn-sm btn-info" onclick="paginaPosterior()">Adelante</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/tableMascotas.js"></script>
<script type="text/javascript">
	cargarTabla()
</script>
{% endblock %}
{% endblock %}