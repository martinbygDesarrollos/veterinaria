{% extends "base.twig" %}
{% block head %}
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center">
	<div class="row">
		<div class="col">
			<div id="containerNuevoSocio" class="card">
				<h5 class="card-header" style="background: #85B58A">Cuotas vencidas hasta el {{ fechaVencimiento }}</h5>
				<div class="card-body">
					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-search"></i></span>
						<input type="text" class="form-control" onchange="buscarSocioVencimientoCuota(this)" onkeyup="this.onchange()" aria-label="Sizing example input" placeholder="Buscar nombre...">
					</div>
					<table class="table table-striped table-bordered">
						<thead class="thead-dark">
							<tr>
								<th class="text-center" scope="col">Ultima cuota</th>
								<th class="text-center" scope="col">Día de pago</th>
								<th class="text-center" scope="col">Socio</th>
								<th class="text-center" scope="col">Teléfono</th>
								<th class="text-center" scope="col">Email</th>
							</tr>
						</thead>
						<tbody id="tbodyVencimientosCuota"></tbody>
					</table>
					<div id="noHayResultadosMensaje" style="display: none" class="alert alert-info text-center" role="alert">
						<h3>No hay resultado</h3>
						No se encontraron resultados para esta busqueda.
					</div>
					<div class="d-flex justify-content-between">
						<button id="irAtrasPaginaVencimientosCuota" class="btn btn-sm btn-info" onclick="paginaAnteriorVencimientoCuota()">Atras</button>
						<button id="irAdelantePaginaVencimientosCuota" class="btn btn-sm btn-info" onclick="paginaPosteriorVencimientoCuota()">Adelante</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="modalNotificacionCuota" tabindex="-1" role="dialog"  aria-labelledby="exampleModalCenterTitle" aria-hidden="true" >
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<input type="text" id="idSocioVencimiento" style="display: none;">
			<div class="modal-header alert-success" >
				<h5 class="modal-title" id="exampleModalLongTitle">Notificar vencimientos</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p class="text-center">¿Desea enviar una notificación con al socio sobre el vencimiento de su cuota?</p>
			</div>
			<div class="modal-footer">
				<button class="btn btn-danger" data-dismiss="modal" >Cancelar</button>
				<button class="btn btn-success" id="btnNuevaMascota" onclick="notificarVencimientoCuota()">Confirmar</button>
			</div>
		</div>
	</div>
</div>
{%block script%}
<script type="text/javascript" src="{{path_for('Inicio')}}scripts/vencimientos.js"></script>
<script type="text/javascript">
	cargarTablaVencimientoCuota();
</script>
{% endblock %}
{% endblock %}